{
  "name": "adaptive-html",
  "version": "1.0.0",
  "description": "HTML to Adaptive Card converter",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:min && npm run build:unmin",
    "build:min": "rollup --config rollup.config.js --minify",
    "build:unmin": "rollup --config rollup.config.js",
    "dev": "rollup --config rollup.config.js --watch --output.file client/public/scripts/adaptive-html.js",
    "client": "node ./client/server.js",
    "test": "rollup --config rollup.config.js --output.format cjs --output.file tests/adaptive-html.js && ava"
  },
  "keywords": [],
  "author": "Richie Casto",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "jsdom": "^11.6.2",
    "rollup": "^0.56.4",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-uglify": "^3.0.0"
  },
  "ava": {
    "files": [
      "tests/*.js",
      "!tests/adaptive-html.js"
    ]
  }
}

{
  "name": "adaptive-html",
  "version": "1.1.0",
  "description": "HTML to Adaptive Card JSON converter",
  "main": "dist/adaptive-html.cjs.js",
  "scripts": {
    "build": "npm run build:iife.min && npm run build:iife && npm run build:cjs && npm run build:es",
    "build:iife.min": "rollup --config rollup.config.js --minify",
    "build:iife": "rollup --config rollup.config.js",
    "build:cjs": "rollup --config rollup.config.js --output.format cjs --output.file dist/adaptive-html.cjs.js",
    "build:es": "rollup --config rollup.config.js --output.format es --output.file dist/adaptive-html.es.js",
    "dev": "rollup --config rollup.config.js --watch --output.file client/public/scripts/adaptive-html.js",
    "client": "node ./client/server.js",
    "test": "npm run build:cjs && nyc ava",
    "test:report": "nyc report --reporter=html",
    "prepack": "npm run build"
  },
  "keywords": [],
  "author": "Richie Casto",
  "license": "ISC",
  "dependencies": {
    "jsdom": "^11.6.2"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "nyc": "^11.4.1",
    "rollup": "^0.56.4",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-uglify": "^3.0.0"
  },
  "ava": {
    "files": [
      "tests/*.js"
    ]
  }
}

{
  "name": "adaptive-html",
  "version": "1.1.7",
  "description": "HTML to Adaptive Card JSON converter",
  "main": "dist/adaptive-html.cjs.js",
  "scripts": {
    "build": "npm-run-all --parallel build:iife.min build:iife build:cjs build:es",
    "build:iife.min": "rollup --config rollup.config.js --minify",
    "build:iife": "rollup --config rollup.config.js",
    "build:cjs": "rollup --config rollup.config.js --output.format cjs --output.file dist/adaptive-html.cjs.js",
    "build:es": "rollup --config rollup.config.js --output.format es --output.file dist/adaptive-html.es.js",
    "dev": "npm-run-all --parallel client client:build",
    "client": "node ./client/server.js",
    "client:build": "rollup --config rollup.config.js --watch --output.file client/public/adaptive-html.js",
    "test": "npm-run-all build:cjs && nyc ava",
    "test:report": "nyc report --reporter=html",
    "prepack": "npm-run-all build",
    "clean": "rimraf .nyc_output coverage client/public/adaptive-html.js client/node_modules node_modules"
  },
  "keywords": [
    "htmltoadaptivecard",
    "adaptivecards",
    "adaptive",
    "cards",
    "html",
    "converter",
    "wysiwyg"
  ],
  "author": "Richie Casto",
  "license": "MIT",
  "dependencies": {
    "jsdom": "^11.6.2"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.56.4",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-license": "^0.6.0",
    "rollup-plugin-uglify": "^3.0.0"
  },
  "ava": {
    "files": [
      "tests/*.js"
    ]
  }
}
